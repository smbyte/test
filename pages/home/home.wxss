/* pages/home/home.wxss */
/*banner*/
.slide-image {
    background-color: #eee;
    width: 100%;
    height: 100%;
}
.mask-view {
    position: relative;
    top: -100%;
    width:100%;
    height:100%;
    display: flex;
    justify-content:flex-end;
    flex-direction: column;
}
.slide-text {
    margin-left: 15px;
    margin-right: 15px;
    margin-bottom: 30px;
    font-weight: bold;
    font-size: 14pt;
    line-height: 130%;
    color: #fff;
    text-shadow: 2rpx 2rpx 2rpx #000;
}

/*列表*/
.item-container {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: flex-start;
    padding: 15px;
    overflow: hidden;
}

.item-left {
    line-height: 130%;
    margin-right: 15px;
}

.item-right {
    width:80px; 
    height:60px;
    background-color:#eee; 
    border-radius: 2px;
}

.item-line {
    margin-left: 15px;
    background-color: #eee;
    height: 1rpx;
}

.item-title {
    color: #353535;
    font-size:13pt;
    font-weight:bold;
}

.items-loading {
    width: 100%;
    height: 44px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 11pt;
    color: #888;
}